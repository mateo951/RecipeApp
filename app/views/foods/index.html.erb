<%= link_to 'Add new food', new_food_path, :class => 'btn btn-secondary float-left add-button-margins' %>
<div class="clear margin-table">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Food</th>
        <th>Measurement unit</th>
        <th>Unit price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
        <td><%= food.name%></td>
        <td><%= food.measurement_unit%></td>
        <td><%= food.price%></td>
        <td><%= button_to "Delete", food, method: :delete, class: 'btn btn-primary' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div> 