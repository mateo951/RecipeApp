<table class="table table-primary table-striped w-75 text-center">
 <% if recipe_foods.any? %>
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% recipe_foods.each do |ing|%>
    <tr>
      <th scope="row"><%= ing.food.name%></th>
      <td><%= ing.quantity%><%= ing.food.measurement_unit%></td>
      <td>$ <%= ing.food.price * ing.quantity%></td>
      <td><%= render partial: "_partials/buttons/delete-recipe_foods", locals: {recipe: @recipe, ingredient: ing} %></td>
    </tr>  
  <%end%>
<%end%>
  </tbody>
</table> 