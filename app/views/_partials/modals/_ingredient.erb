<% if recipe.user.id = current_user.id %>
  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Add ingredient
  </button>
<% end %>

<div class="collapse" id="collapseExample"> 
  <div class="card card-body">
  <%= form_with url:recipe_recipe_foods_path(@recipe.id), method: :post  do |form| %>
    <%= form.label :food_id, "Food", class:"form-label mr-4" %>
    <%= form.select :food_id, current_user.foods.map{|food| [food.name, food.id]}, required: true %>
    <%= form.label :quantity, "Quantity", class:"form-label mr-4" %>
    <%= form.text_field :quantity, required: true %>
    <%= form.submit "Add ingredient", class: "btn btn-success" %>
  <% end %>
  </div>
</div>